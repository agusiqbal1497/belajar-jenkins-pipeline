pipeline {
    agent any
    // agent {
    //     node {
    //         label "Windows java11"
    //     }
    // }
    stages {
        stage("Build") {
            steps {
                script {
                    for (int i = 0; i < 5; i++) {
                        echo("Script ${i}")
                    }
                }

                echo("Build Pipeline by PZ 1")
                sleep(5)
                echo("Build Pipeline by PZ 2")
                echo("Build Pipeline by PZ 3")

                // echo("Start Build")
                // sh("./mvnw clean compile test-compile")
                // echo("Finish Build")
            }
        }

        stage("Test") {
            steps {
                echo("Test Pipeline by PZ")

                // echo("Start Test")
                // sh("./mvnw test")
                // echo("Finish Test")
            }
        }

        stage("Deplpoy") {
            steps {
                echo("Deplpoy Pipeline by PZ")
            }
        }
    }

post {
    always {
        echo "I will always say Hello again!"
    }
    success {
        echo "Sueccessfully"
    }
    failure {
        echo "Failed bro"
    }
    cleanup {
        echo "Do not care success or error"
    }
}

}